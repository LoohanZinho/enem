# Configurações do Servidor
PORT=3001
NODE_ENV=development

# Configurações do Banco de Dados PostgreSQL
DATABASE_URL=postgresql://username:password@localhost:5432/cakto_webhooks

# Configurações da Cakto
CAKTO_WEBHOOK_SECRET=seu_webhook_secret_da_cakto_aqui

# Configurações de Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app_do_gmail
EMAIL_FROM=EnemPro <noreply@enempro.com>

# Configurações de Lembrete
REMINDER_HOURS=24
# Para testes: o sistema usa 1 minuto em desenvolvimento automaticamente

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de Log
LOG_LEVEL=info
